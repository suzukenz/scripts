{
  "name": "@suzukenz/markdown-builder",
  "version": "0.1.0",
  "description": "A markdown builder",
  "tasks": {
    "dev": "deno run --allow-read --watch cli.ts",
    "start": "deno run --allow-read cli.ts",
    "test": "deno test --allow-read",
    "install": "deno install -g --allow-read --config=deno.json -n markdown-builder cli.ts",
    "uninstall": "deno uninstall -g markdown-builder"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/cli": "jsr:@std/cli@^1.0.14",
    "@std/path": "jsr:@std/path@^1.0.8"
  },
  "exports": {
    ".": "./mod.ts"
  }
}
